<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".BlankFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context=".explore">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible">

            <ImageButton
                android:id="@+id/menuButton"
                android:layout_width="40dp"
                android:layout_height="37dp"
                android:layout_marginTop="60dp"
                android:adjustViewBounds="false"
                android:backgroundTintMode="screen"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.105"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/menu_button" />

            <ImageButton
                android:id="@+id/ProfileButton"
                android:layout_width="51dp"
                android:layout_height="53dp"
                android:layout_marginTop="44dp"
                android:backgroundTintMode="screen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.883"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/profile_button" />

            <TextView
                android:id="@+id/greeting"
                android:layout_width="310dp"
                android:layout_height="46dp"
                android:autoText="true"
                android:text="Good Afternoon,"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/userName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="310dp"
                android:layout_height="46dp"
                android:autoText="true"
                android:text="My Tasks"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageViewTaskCardComponent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="309dp"
                android:layout_height="41dp"
                android:autoText="true"
                android:text="Tom"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="526dp"
                android:layout_height="231dp"
                android:layout_marginBottom="32dp"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.506"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/start_pomodoro_activity_div" />

            <ImageButton
                android:id="@+id/pomodoroActivityButton"
                android:layout_width="95dp"
                android:layout_height="39dp"
                android:backgroundTint="#26202C"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.158"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userName"
                app:layout_constraintVertical_bias="0.488"
                app:srcCompat="@drawable/start_pomodoro_activity_button" />

            <ImageView
                android:id="@+id/imageViewTaskCardComponent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/addTaskButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/task_card_component" />

            <ImageButton
                android:id="@+id/taskSettingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:backgroundTint="#F2F3F4"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewTaskCardComponent"
                app:layout_constraintEnd_toEndOf="@+id/imageViewTaskCardComponent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.25"
                app:srcCompat="@drawable/three_dots_more_button" />


            <TextView
                android:id="@+id/taskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Revise your math today!"
                android:textColor="#2C406E"
                app:layout_constraintEnd_toStartOf="@+id/taskSettingsButton"
                app:layout_constraintHorizontal_bias="0.319"
                app:layout_constraintStart_toStartOf="@+id/imageViewTaskCardComponent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/taskTiming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="07:00 - 08:15"
                android:textColor="#9AA8C7"
                app:layout_constraintEnd_toStartOf="@+id/taskSettingsButton"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/taskTitle"
                app:layout_constraintTop_toBottomOf="@+id/taskTitle" />

            <View
                android:id="@+id/taskColour"
                android:layout_width="2dp"
                android:layout_height="40dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#8F99EB"
                android:backgroundTintMode="add"
                app:layout_constraintBottom_toBottomOf="@+id/taskTiming"
                app:layout_constraintEnd_toStartOf="@+id/taskTitle"
                app:layout_constraintHorizontal_bias="0.755"
                app:layout_constraintStart_toStartOf="@+id/imageViewTaskCardComponent" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="416dp"
                android:layout_height="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/bottom_nav" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addTaskButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@android:drawable/ic_input_add" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</FrameLayout>